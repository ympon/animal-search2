!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title AnimalSearch2
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .menu
      .header
        .main-title
          %a{ href: "/", class: "main-title__logo"} 
            Animal Search
          .user-management
            - if user_signed_in?
              .user__name
                = current_user.name
              = link_to "ログアウト", "/users/sign_out", class: "logout", method: :delete 
            - else
              = link_to "ログイン", "/users/sign_in", class: "post" 
              = link_to "新規登録", "/users/sign_up", class: "post" 
    = yield
